<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AddFeedPopover" parent="GtkPopover">
    <property name="autohide">1</property>
    <child>
      <object class="GtkBox" id="container_box">
        <property name="width_request">290</property>
        <property name="orientation">vertical</property>
        <property name="spacing">6</property>
        <child>
          <object class="GtkLabel">
            <property name="halign">start</property>
            <property name="label" translatable="yes">Enter feed address to add</property>
            <property name="use_markup">True</property>
            <style>
              <class name="dim-label"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="spacing">6</property>
            <property name="orientation">horizontal</property>
            <child>
              <object class="GtkEntry" id="url_entry">
                <property name="visible">1</property>
                <property name="placeholder_text" translatable="yes">https://...</property>
                <property name="input_purpose">url</property>
                <property name="hexpand">1</property>
                <signal name="activate" handler="on_url_entry_activate" />
                <signal name="changed" handler="on_url_entry_changed" />
              </object>
            </child>
            <child>
              <object class="GtkButton" id="confirm_btn">
                <property name="label" translatable="yes">Add</property>
                <signal name="clicked" handler="on_confirm_btn_clicked" />
                <style><class name="suggested-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkRevealer" id="already_subscribed_revealer">
            <property name="visible">1</property>
            <child>
              <object class="GtkLabel">
                <property name="visible">1</property>
                <property name="can_focus">0</property>
                <property name="label" translatable="yes">You're already subscribed to that feed!</property>
                <property name="wrap">1</property>
                <property name="xalign">0</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
